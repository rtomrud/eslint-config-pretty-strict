{
  "env": {
    "node": true
  },
  "extends": [
    "./index.js"
  ],
  "overrides": [
    {
      "extends": ["plugin:jest/recommended"],
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "plugins": ["jest"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "root": true
}
